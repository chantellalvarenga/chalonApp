<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="30dp"
    android:background="#40E89F91">

    <ImageView
        android:id="@+id/imageViewTratamiento"
        android:layout_width="115dp"
        android:layout_height="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNombre_tratamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/DefaultValue"
        android:textColor="#090707"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toEndOf="@+id/imageViewTratamiento"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_precio_tratamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DefaultValue2"
        android:textColor="#090707"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnReservar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toEndOf="@+id/imageViewTratamiento"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre_tratamiento"
        app:layout_constraintVertical_bias="0.297" />

    <Button
        android:id="@+id/btnReservar"
        android:layout_width="89dp"
        android:layout_height="38dp"
        android:background="#70E89F91"
        android:onClick="Reservar"
        android:text="@string/reservar"
        android:textAllCaps="false"
        android:textColor="#841E42"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toEndOf="@+id/imageViewTratamiento"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre_tratamiento"
        app:layout_constraintVertical_bias="0.556" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTratamiento" />

</androidx.constraintlayout.widget.ConstraintLayout>